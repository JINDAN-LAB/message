<!-- seleListDetailsWapper-->
	<select id="seleListDetailsWapper"  resultMap="selectBaohanResult">
		SELECT
		risk_point.*, risk_point_content.*,risk_point_content_result.*,risk_point_persons.*
		FROM
		risk_point
		left  join risk_point_content  on risk_point.rid = risk_point_content.parent_id and risk_point_content.delete_id =0
		left  join risk_point_content_result  on risk_point_content.risk_ids = risk_point_content_result.parent_id and   risk_point_content_result.delete_id = 0
		left  join risk_point_persons  on risk_point.rid = risk_point_persons.parent_id and risk_point_content.jibie = risk_point_persons.control_rank and risk_point_persons.delete_id = 0
		where risk_point_content_result.ris_pcr in
		<foreach collection="array" index="index" item="item" open="(" separator="," close=")">
			#{item}
		</foreach>

	</select>

