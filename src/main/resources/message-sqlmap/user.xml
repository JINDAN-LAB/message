<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="UserMapper">

    <resultMap id="userMapping" type="com.jd.message.entity.User">
        <result column="id" property="id" />
        <result column="name" property="name" />
        <result column="customer_id" property="customerId" />
        <result column="createtime" property="createtime" />
    </resultMap>

    <insert id="addUser" parameterType="com.jd.message.entity.User">
        INSERT INTO t_user
        (
          id,
          name,
          customer_id
        )
        VALUES
        (
          #{id},
          #{name},
          #{customerId}
        )
    </insert>


    <select id="selectUser" resultMap="userMapping" parameterType="java.lang.String" >
        select
        *
        from t_user
        where name = #{name}
    </select>

    <update id="updateUser" parameterType="com.jd.message.entity.User" >
        update t_user
        set name = #{name},
        customer_id = #{customerId}
        where id = #{id}
    </update>

    <delete id="deleteUser" parameterType="java.lang.Integer" >
        delete from t_user
        where id = #{id}
    </delete>


</mapper>